</Panel>
<Panel id="ubongo_die_wrapper" width="80" height="80" rectAlignment="LowerCenter" offsetXY="-170 25" tooltip="現在のお題" tooltipPosition="Above" allowDragging="true" returnToOriginalPositionWhenReleased="false">
